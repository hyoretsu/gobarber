{
 "compilerOptions": {
  "allowJs": true,
  "baseUrl": "./src",
  "emitDecoratorMetadata": true,
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "forceConsistentCasingInFileNames": true,
  "module": "commonjs",
  "outDir": "./dist",
  "paths": {
   "@config/*": ["config/*"],
   "@modules/*": ["modules/*"],
   "@shared/*": ["shared/*"]
  },
  "rootDir": "./src",
  "strict": true,
  "strictPropertyInitialization": false,
  "target": "es5"
 },
 "exclude": ["coverage", "dist", "jest.config.js", "node_modules", "prettier.config.js", "tmp"]
}
